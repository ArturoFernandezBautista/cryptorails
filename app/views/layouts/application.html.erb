<!DOCTYPE html>
<html>
  <head>
    <title>Proyecto Cripto</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Home', root_path %>
      <%= link_to 'Import Document', document_new_path %>
      <%= link_to 'My Wallets', wallets_path %>
      <%= link_to 'Delete All', document_destroy_path,
              data: {:confirm => 'Are you sure?'}, :method => :delete %>
     
      <div style="float:right"><%= current_user.email %> <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
